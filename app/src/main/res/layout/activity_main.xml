<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/chk1"
        android:layout_width="166dp"
        android:layout_height="51dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="35dp"
        android:text="Do you drink coffee?"
        app:layout_constraintBottom_toTopOf="@+id/rd1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/rd1"
        android:layout_width="161dp"
        android:layout_height="56dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="46dp"
        android:text="Do you drink coffee?"
        app:layout_constraintBottom_toTopOf="@+id/swt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk1" />

    <Switch
        android:id="@+id/swt1"
        android:layout_width="179dp"
        android:layout_height="49dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="416dp"
        android:text="Do you drink coffee?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rd1" />

</androidx.constraintlayout.widget.ConstraintLayout>